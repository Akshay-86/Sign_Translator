<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#D4C2EC">

    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:backgroundTint="#800080"
        android:contentDescription="goHome"
        android:onClick="goHome"
        android:src="@drawable/ic_home"

        android:text="â†"
        android:background="@drawable/custom_button2" />


    <TextView
        android:layout_height="44dp"
        android:layout_width="250dp"
        android:padding="11dp"
        android:textSize="15sp"
        android:layout_margin="8dp"
        android:backgroundTint="#D4C2EC"
        android:layout_marginBottom="12dp"
        android:textColorHint="#800080"
        android:layout_alignParentBottom="true"
        android:id="@+id/captions"
        android:hint="Captions here..."
        android:background="@drawable/custom_button"/>


    <Button
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/soundBtn"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:text="ðŸ”€"
        android:background="@drawable/custom_button"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#800080"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/soundBtn"
        android:text="ðŸ”Š"
        android:background="@drawable/custom_button"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#D4C2EC"
        android:textColor="#800080"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:id="@+id/saveHistoryBtn"
        android:text="Save"
        android:background="@drawable/custom_button"/>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/fpsCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveHistoryBtn"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="#AA000000"
        android:padding="4dp"
        android:textColor="#FFFFFF"
        android:text="FPS: 0.0"
        tools:ignore="HardcodedText" />

</RelativeLayout>
