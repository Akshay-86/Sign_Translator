<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Button background color -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: add border -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" />

    <!-- Optional: shadow or padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" />

</shape>
